/* pages/wxLoginPage/wxLoginPage.wxss */

.background-shapes {
  position: absolute;
  width: 100%;
  height: 100%;
}

.shape {
  position: absolute;
  filter: blur(30px);
}

.shape-1 {
  width: 180px;
  height: 180px;
  background-color: #ffbfc1;
  border-radius: 50%;
  top: 70%;
  left: 10%;
  opacity: 0.9;
}

.shape-2 {
  width: 230px;
  height: 230px;
  background-color: #b5face;
  transform: rotate(150deg);
  /* 旋转45度 */
  bottom: 20%;
  border-radius: 50%;

  right: 5%;
  opacity: 0.8;
}

.shape-3 {
  width: 200px;
  height: 200px;
  background-color: #c1a7ff;
  border-radius: 50%;
  top: 55%;
  left: 23%;
  opacity: 0.8;
}

.shape-4 {
  width: 300px;
  height: 300px;
  background-color: #61a8fe;
  bottom: 30%;
  right: 50%;
  transform: rotate(45deg);
  /* 旋转45度 */
  opacity: 0.7;
}



