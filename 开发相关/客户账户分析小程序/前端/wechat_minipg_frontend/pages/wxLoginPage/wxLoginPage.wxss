.container .mainContent {
  /* margin-top: 30rpx; */
  height: 100vh;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 1);
  z-index: 90;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.container .bottomPop {
  background-color: rgb(255, 255, 255);
  width: 100%;
  height: 650rpx;
  transform: translateY(650rpx);

  position: absolute;
  z-index: 99;
  bottom: 0rpx;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}


.bottomPop .topContent {
  width: 95%;
  height: 170rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin-top: 20rpx;
}

.bottomPop .title {
  font-size: 44rpx;
  font-weight: bold;
  letter-spacing: 3rpx;
}

.bottomPop .tip {
  font-size: 28rpx;
  color: rgb(163, 163, 163);
  margin-top: 10rpx;
  letter-spacing: 3rpx;
}






