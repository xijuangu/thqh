/* pages/tradeLoginPage/tadeLoginPage.wxss */
page {
  background: rgb(241, 241, 241)
}

.container {
  display: flex;
  flex-direction: column;
  /* background-color: beige; */
  width: 100vw;
  height: 100vh;
  position: relative;
}

.tradeContainer {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  margin-top: 35%;
  align-items: center;
}

.tradeContainer .info {
  font-size: 34rpx;
  /* background-color: rgb(240, 240, 144); */
  width: 600rpx;
  letter-spacing: 1rpx;
  margin-left: 50rpx;
}

.inputBox {
  display: flex;
  flex-direction: column;
  margin-top: 65rpx;
  /* background-color: rgb(209, 209, 12); */
  width: 600rpx;
}

.inputBox .inputBoxPattern {
  background-color: rgb(255, 255, 255);
  height: 93rpx;
  position: relative;
  border: solid 2rpx #3e8ffe;
  border-radius: 50rpx;
}

.inputBox .inputBoxPattern image {
  /* 13:10 */
  /* background-color: rgb(54, 54, 54); */
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}

.inputBox .inputBoxPattern input {
  /* 13:10 */
  width: 60%;
  max-width: 100vw;
  height: 50rpx;
  position: relative;
  left: 110rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 30rpx;
  letter-spacing: 3rpx;
  /* background-color: beige; */
}

.inputBox .inputBoxPattern.accountPW {
  margin-top: 30rpx;
}

.inputBox .inputBoxPattern.accountPW input {
  font-size: 30rpx;
  letter-spacing: 3rpx;
}

.inputBox .accountPW .icon.eye {
  margin-left: 480rpx;
}

.tradeContainer .submitBtn {
  height: 80rpx;
  margin-top: 30rpx;
  width: 600rpx;
  display: flex;
  justify-content: center;
  align-items: center;

}

.tradeContainer .submitBtn button {
  background-color: #3e8ffe;
  border: 0;
  width: 100%;
  border-radius: 50rpx;
  color: white;
  letter-spacing: 6rpx;
  font-size: 33rpx;
}


.warnContainer {
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  top: 20%;

  background-color: rgb(0, 0, 0);
  width: 270rpx;
  height: 70rpx;
  border-radius: 10rpx;
  
  opacity: 0;
}
.warnContainer .warnText{
  font-size: 30rpx;
  color: white;
}

.container .mask{
  width: 100%;
  height: 100%;
  /* background-color: rgb(79, 143, 199); */
  position: absolute;
}