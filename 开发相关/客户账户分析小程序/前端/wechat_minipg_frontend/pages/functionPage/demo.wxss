.screenMaskON {
  position: absolute;
  background-color: black;
  width: 100vw;
  height: 100vh;
  opacity: 0;
  z-index: 2;
}

.popWindow {
  width: 100%;
  height: 570rpx;
  transform: translateY(570rpx);
  background-color: rgb(241, 241, 241);
  position: absolute;
  bottom: 0;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  text-align: center;
  z-index: 3;
  opacity: 1;
}

.popWindow.show {
  opacity: 1;
}

.popWindow.show {
  transform: translateY(0rpx);
}

.popWindow .indicateText {
  color: rgb(138, 138, 138);
  /* background-color: red; */
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 23rpx;
  background-color: white;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}

.popWindow .chooseBox {
  height: 300rpx;
  display: flex;
  flex-direction: column;
}

.popWindow .chooseBox .subfunction {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: white;
  border-top: solid 1rpx rgb(173, 173, 173);
}


.popWindow .cancle {
  background-color: white;
  width: 100%;
  height: 100rpx;
  margin-top: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}



.disclaimer {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 50%;                /* 定位到父容器高度的 50% */
  left: 55rpx;             /* 保持水平位置（可选） */
  right: 55rpx;           
  transform: translateY(-50%);  /* 向上偏移自身高度的 50%，实现精准居中 */
  box-sizing: border-box;
  background-color:white;
  padding: 55rpx;          /* 可选，保持你的内边距 */
  z-index: 6;
}

.disclaimer .disclaimer-title{
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.disclaimer .disclaimer-text {
  font-size: medium;
  text-indent: 2em;
  
}

.disclaimer .disclaimer-button {
  background-color: rgb(103, 235, 121);
  font-size: medium;
  color: white;
  margin-top: 25rpx;
}

.disclaimer-static {
  display: flex;
  flex-direction: column;
  width: 640rpx;
  margin-top: 60rpx;
}

.disclaimer-static .disclaimer-static-title {
  font-weight: bold;
  font-size: 28rpx;
  color: #333335;
  /* margin-bottom: 15rpx; */
}

.disclaimer-static .disclaimer-static-text {
  padding: 15rpx;
  text-indent: 2em;
  font-size: 25rpx;
  color: #78787a;
  line-height: 1.5; 
}
