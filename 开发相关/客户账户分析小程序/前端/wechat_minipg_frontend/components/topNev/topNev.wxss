/* components/second.wxss */
.container {
  width: 100vw;
}

.statusBar.show_background_color {
  background-color: rgb(238, 238, 238);
}

.nevigationbar {
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.nevigationbar.show_background_color {
  background-color: rgb(238, 238, 238);
}



.iconbox {
  width: 100%;
  height: 100%;
  /* background-color: aqua; */
  position: absolute;
  display: flex;
  align-items: center;
}

.arrowIcon {
  width: 26px;
  height: 26px;
  position: absolute;
  left: 2px
}

.barTitle {
  position: relative;
  margin: auto;
  color: black;
  font-size: 31rpx;
}

.privacyAuth {
  background-color: rgb(224, 224, 224);
  height: 65rpx;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
  font-weight: 600;
  font-size: 28rpx;
  color: black;
}

.privacyAuth .btn {
  background-color: rgba(255, 255, 255, 0);

  box-sizing: border-box;
  border: 1rpx solid red;
  color: red;
  font-size: 26rpx;
  font-weight: 400;

  display: flex;
  justify-content: center;
  align-items: center;

  height: 45rpx;

  margin-right: 30rpx;

}

.container .mask {
  position: fixed;
  background-color: black;
  width: 100vw;
  height: 100vh;
  opacity: 0;
  z-index: 100;
}

.container .cancelPrivacyAuth-popUP {
  position: fixed;
}